.nag
  transform translate3d(0,0,0)
  position fixed
  bottom 10px
  right -582px
  background hexBlack
  background-color rgba(0,0,0,.8)
  background linear-gradient(135deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 44.28427px, rgba(0, 0, 0, .8) 44.28427px, rgba(0, 0, 0, .8))
  padding 0
  color hexBlack
  width 540px
  transition right .5s
  z-index 1
  .nag-content
    font-size 0.9em
    padding 18px 20px 10px 20px
    p:first-child
      margin-top -0.42857143em
      margin-bottom 0
    p:last-child
      margin-bottom 15px
    li
      cf()
    ul li
      &:first-child
        border-bottom 1px solid hexWebGrey3
        margin-bottom 2px
      &:last-child
        margin-top 16px
      
  .nag-header
    position relative
    text-align right
    padding 5px 10px 1px 0;
    border 0
    cf()
    background-color transparent
    font-size 22px
    color hexWhite
    width auto
  .subheader
    margin-top 10px
    img 
      vertical-align top
    background-color hexWebGrey3
  .tab
    align(vertical)
    left -78px
    color #4099ff
    //transform rotate(270deg)
    background-color #ffffff
    padding 5px 10px
    cursor pointer
    visibilty visible
    transition visibilty .5s, left .5s .5s, opacity .5s .5s 
    z-index 1
  &.active
    right -1px
    .tab
      left 0
      visibility hidden
p.tweet
  margin-bottom 5px
  color hexWhite
p.timePosted
  font-size 12px
  color hexWhite
  