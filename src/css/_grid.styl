.content:before
	content ""
	display block
	// height 48px
.wrapper
	width 100%
	&.foot
		height auto

.container
	position relative
	center(max-width:1270px,pad:15px)
	&.slider
		padding-left 0
		padding-right 0
	
	#work &
	#main &
		padding 0
		margin 0
		width 100%
		max-width 100%

.group
	cf()
	&.flexed
		display flex
		justify-content space-around
		flex-flow row no-wrap
		
		#intro &
		#work &
			flex-flow row wrap
	&.intro
		
		align-items flex-start
		
	.item
		width 40%
		margin auto
		perspective 800px
		position relative
		
		+below(sm)
			width 80%
		
		&.centerText
			text-align center
		&.stretch
			width 100%
		
		&.shorter
			width 20%
		
		&.profilePic
			width 100%
			margin-bottom 40px
			text-align center
		
		&.description
			+below(sm)
				display none
		

		#work &
			width 50%
			margin 0
			+below(sm)
				width 100%
			
			img
				// filter grayscale(100%)
				+below(sm)
					filter none
			
		#experience &
		#education &
			margin 0 10px 0 0
			+below(sm)
				margin 0 20px 0 0
		
		#intro &
			margin-top 0
			margin-bottom 0

.profilePic
	margin-bottom 40px !important
	
	img
		border-radius 100px
		width 200px
		height 200px
	
	&:before
		background rgba(hexOrange,0.5)



.rel 
	position relative
.abs
	position absolute
.btm
	bottom 20px
.right
	right 0

.neg
	margin-top -80px
	+below(sm)
		margin-top 0px

.center
	align(both)
	
//Divider
.divider
	position absolute
	width 1px
	top 0
	left 103%
	height 110%
	border-left 1px solid lighten(hexBlack, 75%)
	+below(sm)
		width 100%
		height 1px
		left 0
		top 125%
		border-top 1px solid lighten(hexBlack, 75%)
	
//Blocks

.block
	padding 40px 0
	+below(sm)
		padding 20px 0
	
	#work &
		padding 0
		
.block-img
	width auto
	&.block1
		margin-top -50px
		margin-left -50px
		zoom 1
		position relative
		max-width 130%
		+below(sm)
			margin-top 0px
			margin-left 0px
			max-width 100%
	&.block3
		margin-top -90px
		margin-left 0px
	&.block2
		width inherit

	
+below(sm)
	.sm-hide
		display none !important
	.block-img
		&.block3
			margin 0
	.btn
		width 100%
+below(bb)
	.bb-hide
		display none

#main
	.container
		width 100vw
		height 100vh

#footer
	.footerIcon
		align(both)
		
		
.title
	width 100%
	margin-top 40px
	h1
		text-align center
		+below(sm)
			font-size 3em
			margin-left 20px
			text-align left
	span 
		margin-right 5px
	
	#intro &
		margin 0

.hide
	visibiity hidden

.top
	z-index 100
.showOnMobile
	display none
	+below(sm)
		display block

.showOnDesktop
	display block
	+below(sm)
		display none


// #work overlay
.overlay
	background-color rgba(lighten(black,10%),0.8)
	display none
	position absolute
	width 100%
	height 100%
	z-index 100
	+below(sm)
		display block
		a 
			display block
			width 100%
			height 100%
			
			.title
				margin 0
				align(both)
				h1
					font-size 2em !important
					text-align center
					margin 0 20px 0
	
