.content:before
	content ""
	display block
	// height 48px
.wrapper
	width 100%
	&.foot
		height 50px

.container
	position relative
	center(max-width:1270px,pad:15px)
	&.slider
		padding-left 0
		padding-right 0

.group
	cf()
	&.flexed
		display flex
		justify-content space-around
		flex-flow row no-wrap
	&.intro
		
		align-items center
		
	.item
		width 40%
		margin auto
		perspective 800px
		+below(sm)
			width 80%
		
		&.centerText
			text-align center
		&.stretch
			width 100%
		
		&.shorter
			width 20%
		
		#experience &
		#education &
			margin 0 10px 0 0
			+below(sm)
				margin 0 20px 0 0
			
		
.profilePic
	margin 0 auto 40px
	img
		border-radius 100px
		width 200px
		height 200px
	
	&:before
		background rgba(hexOrange,0.5)



.rel 
	position relative
.abs
	position absolute
.btm
	bottom 20px
.right
	right 0

.neg
	margin-top -80px
	+below(sm)
		margin-top 0px

.center
	align(both)
	
//Divider
.divider
	position absolute
	width 1px
	top 0
	left 103%
	height 110%
	border-left 1px solid lighten(hexBlack, 75%)
	+below(sm)
		width 100%
		height 1px
		left 0
		top 125%
		border-top 1px solid lighten(hexBlack, 75%)
	
//Blocks

.block
	padding 40px 0
	+below(sm)
		padding 20px 0
		
.block-img
	width auto
	&.block1
		margin-top -50px
		margin-left -50px
		zoom 1
		position relative
		max-width 130%
		+below(sm)
			margin-top 0px
			margin-left 0px
			max-width 100%
	&.block3
		margin-top -90px
		margin-left 0px
	&.block2
		width inherit

	
+below(sm)
	.sm-hide
		display none !important
	.block-img
		&.block3
			margin 0
	.btn
		width 100%
+below(bb)
	.bb-hide
		display none

#main
	.container
		width 100vw
		height 100vh
		
.title
	width 100%
	margin-top 40px
	h1
		text-align center
		+below(sm)
			font-size 3em
			margin-left 20px
			text-align left
	span 
		margin-right 5px

.hide
	visibiity hidden

.top
	z-index 100
.showOnMobile
	display none
	+below(sm)
		display block

.showOnDesktop
	display block
	+below(sm)
		display none