.btn
  display inline-block
  margin-bottom 0
  text-decoration none
  font-weight 700
  text-align center
  vertical-align middle
  cursor pointer
  background-image none
  border 1px solid rgba(0, 0, 0, 0)
  margin-right 6px
  padding 6px 12px
  font-size 14px
  line-height 1.42857143
  border-radius 0
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  background-color hexYellow
  color hexBlack!important
  border 0
  &.btn-block
    display block 
  &:hover 
    background-color darken(hexYellow,15%)
    text-decoration none
  span
    &.arrow
      img
        margin 4px 0 0 5px

.cut
  padding-left 60px
  background hexYellow
  background linear-gradient(60deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 44.28427px, hexYellow 44.28427px, hexYellow)
  &:hover 
    background darken(hexYellow,15%)
    background linear-gradient(60deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0) 44.28427px, darken(hexYellow,15%) 44.28427px, darken(hexYellow,15%))

